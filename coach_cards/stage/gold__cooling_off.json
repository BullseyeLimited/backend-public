{
  "type": "stage_detector",
  "name": "gold__cooling_off",
  "version": "0.2",
  "inputs": "as_spec_v0_2",
  "match": {
    "must": [ "tier_is('gold')" ],
    "should": [
      { "if": "gap_hours() >= 48", "add": 2 },
      { "if": "features.energy < 0.25", "add": 1 },
      { "if": "!affection_present()", "add": 1 }
    ],
    "must_not": [
      "warm_reentry_present()",
      "apology_present()"
    ]
  },
  "thresholds": { "choose_if_score_gte": 3, "priority": 99 }
}