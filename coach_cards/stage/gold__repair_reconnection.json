{
  "type": "stage_detector",
  "name": "gold__repair_reconnection",
  "version": "0.2",
  "inputs": "as_spec_v0_2",
  "match": {
    "must": [ "tier_is('gold')" ],
    "should": [
      { "if": "apology_present()", "add": 2 },
      { "if": "forgiveness_present() || acceptance_present()", "add": 1 },
      { "if": "affection_present()", "add": 1 },
      { "if": "features.negativity < 0.35", "add": 1 }
    ],
    "must_not": [
      "hostile_push_present()"
    ]
  },
  "thresholds": { "choose_if_score_gte": 3, "priority": 80 }
}