{
  "type": "stage_detector",
  "name": "gold__preference_exploration",
  "version": "0.2",
  "inputs": "as_spec_v0_2",
  "match": {
    "must": [ "tier_is('gold')" ],
    "should": [
      { "if": "fan_text_any(['like','love','favorite','into'])", "add": 1 },
      { "if": "fan_text_re('(what|which).*\\?')", "add": 1 },
      { "if": "features.energy >= 0.35", "add": 1 },
      { "if": "!price_intent()", "add": 1 },
      { "if": "!explicit_request()", "add": 1 }
    ],
    "must_not": [
      "features.negativity > 0.6"
    ]
  },
  "thresholds": { "choose_if_score_gte": 3, "priority": 20 }
}